# Application
APP_NAME="Glotelho - Production"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://votre-domaine.com
APP_KEY=

# Base de données
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=glotelho_prod
DB_USERNAME=glotelho_user
DB_PASSWORD=change_this_secure_password

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@votre-domaine.com"
MAIL_FROM_NAME="${APP_NAME}"

# Sécurité
APP_DEBUG=false
APP_ENV=production
LOG_LEVEL=error

# Limites
RATE_LIMIT=60
RATE_LIMIT_EXPIRES=1

# Autres
APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

# Horizon
HORIZON_PREFIX=horizon-

# Trusted Proxies
TRUSTED_PROXIES=*

# CORS
SANCTUM_STATEFUL_DOMAINS=votre-domaine.com
SESSION_DOMAIN=.votre-domaine.com

# Pour générer une nouvelle clé d'application, exécutez: php artisan key:generate --show
